<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxiHereMobile.Forms.LoginForm"
             Title="LoginForm">
    <VerticalStackLayout>
        <Label 
            x:Name="lbUsername"
            Text="Username:"
            Margin="20,0,20,0"/>
        <Entry 
            x:Name="txtUsername"
            MaxLength="10"
            Margin="20,0,20,0"/>
        <Label 
            x:Name="lbPassword"
            Text="Password:"
            Margin="20,0,20,0"/>
        <Entry 
            x:Name="txtPassword"
            MaxLength="16"
            Margin="20,0,20,0"
            IsPassword="True"/>

        <Button 
            x:Name="btnLogin" 
            Text="Login"
            WidthRequest="150"
            HeightRequest="40"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0,20,0,0"

            Clicked="btnLogin_Clicked"/>
    </VerticalStackLayout>
</ContentPage>